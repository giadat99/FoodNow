<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="5"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@drawable/heading_custom"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_above="@id/foodnow"
            android:layout_alignParentLeft="true"
            android:src="@drawable/chicken_leg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/burger"
            android:layout_alignParentRight="true"
            android:layout_above="@id/foodnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/pizza"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/foodnow"
            android:textStyle="bold|italic"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp"
            android:layout_centerInParent="true"
            android:text="Food Now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/caption"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:textColor="@color/primaryTextColor"
            android:text="Instant Food Delivery"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/foodnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:inputType="text"
            android:drawablePadding="25dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:background="@drawable/input_text_custom"
            android:id="@+id/email"
            android:hint="Email"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:ems="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="textPassword"
            android:drawablePadding="25dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:background="@drawable/input_text_custom"
            android:id="@+id/password"
            android:layout_below="@id/email"
            android:hint="Password"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:ems="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/forget_pass"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textColor="#151513"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/password"
            android:text="Forgot password ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:ems="8"
            android:textColor="@color/primaryTextColor"
            android:background="@drawable/btn_sign_in"
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/forget_pass"
            android:layout_marginTop="12dp"
            android:layout_marginRight="-45dp"
            android:layout_toLeftOf="@id/forget_pass"
            android:text="Sign in" />

        <Button
            android:ems="8"
            android:background="@drawable/btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/forget_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="-41dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/forget_pass"
            android:text="Sign up" />

            <TextView
                android:id="@+id/sign_google"
                android:textColor="#151513"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/sign_in"
                android:text="Sign In with Google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sign_facebook"
            android:textColor="#151513"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sign_google"
            android:text="Sign In with Facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="91dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/drink" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="91dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/drink2" />
    </RelativeLayout>
</LinearLayout>